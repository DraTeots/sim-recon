	make -C include install
	make -C BCAL install
	make -C CDC install
	make -C CHERENKOV install
	make -C DANA install
	make -C FCAL install
	make -C FDC install
	make -C TAGGER install
	make -C TOF install
	make -C TRIGGER install
	make -C UPV install
	make -C TRACKING install
	make -C HDDM install

clean:
	make -C include clean
	make -C BCAL clean
	make -C CDC clean
	make -C CHERENKOV clean
	make -C DANA clean
	make -C FCAL clean
	make -C FDC clean
	make -C TAGGER clean
	make -C TOF clean
	make -C TRIGGER clean
	make -C UPV clean
	make -C TRACKING clean
	make -C HDDM clean
	

pristine:
	make -C BCAL pristine
	make -C CDC pristine
	make -C CHERENKOV pristine
	make -C DANA pristine
	make -C FCAL pristine
	make -C FDC pristine
	make -C TAGGER pristine
	make -C TOF pristine
	make -C TRIGGER pristine
	make -C UPV pristine
	make -C TRACKING pristine
	make -C HDDM pristine
